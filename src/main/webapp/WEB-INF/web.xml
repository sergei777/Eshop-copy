<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
  <display-name>Eshop</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>
      org.tylubz.utils.ServletContextListenerImpl
    </listener-class>
  </listener>
  <servlet>
    <servlet-name>Addresses</servlet-name>
    <servlet-class>org.tylubz.servlet.ShowAddressesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Addresses</servlet-name>
    <url-pattern>/AddressServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>checkUser</servlet-name>
    <servlet-class>org.tylubz.servlet.LoginCheckServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>checkUser</servlet-name>
    <url-pattern>/checkuser</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowProducts</servlet-name>
    <servlet-class>org.tylubz.servlet.ShowProductsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowProducts</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SignUp</servlet-name>
    <servlet-class>org.tylubz.servlet.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUp</servlet-name>
    <url-pattern>/sign-up</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Settings</servlet-name>
    <servlet-class>org.tylubz.servlet.SettingsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Settings</servlet-name>
    <url-pattern>/settings</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShoppingCart</servlet-name>
    <servlet-class>org.tylubz.servlet.ShoppingCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShoppingCart</servlet-name>
    <url-pattern>/shopping-cart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MakeOrder</servlet-name>
    <servlet-class>org.tylubz.servlet.MakeOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MakeOrder</servlet-name>
    <url-pattern>/make-order</url-pattern>
  </servlet-mapping>
</web-app>
