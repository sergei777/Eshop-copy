<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Eshop</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>
      org.tylubz.utils.ServletContextListenerImpl
    </listener-class>
  </listener>
  <servlet>
    <servlet-name>checkUser</servlet-name>
    <servlet-class>org.tylubz.servlet.SignInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>checkUser</servlet-name>
    <url-pattern>/checkuser</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SignUp</servlet-name>
    <servlet-class>org.tylubz.servlet.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUp</servlet-name>
    <url-pattern>/sign-up</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Settings</servlet-name>
    <servlet-class>org.tylubz.servlet.SettingsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Settings</servlet-name>
    <url-pattern>/settings</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShoppingCart</servlet-name>
    <servlet-class>org.tylubz.servlet.ShoppingCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShoppingCart</servlet-name>
    <url-pattern>/shopping-cart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MakeOrder</servlet-name>
    <servlet-class>org.tylubz.servlet.MakeOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MakeOrder</servlet-name>
    <url-pattern>/make-order</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserList</servlet-name>
    <servlet-class>org.tylubz.servlet.UserListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserList</servlet-name>
    <url-pattern>/user-list</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>OrderList</servlet-name>
    <servlet-class>org.tylubz.servlet.OrderListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderList</servlet-name>
    <url-pattern>/order-list</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductList</servlet-name>
    <servlet-class>org.tylubz.servlet.ProductOperationsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductList</servlet-name>
    <url-pattern>/product-list</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Statistics</servlet-name>
    <servlet-class>org.tylubz.servlet.StatisticsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Statistics</servlet-name>
    <url-pattern>/statistics</url-pattern>
  </servlet-mapping>
  <error-page>
    <!-- Missing resource -->
    <error-code>404</error-code>
    <location>/error.jsp</location>
  </error-page>
</web-app>
